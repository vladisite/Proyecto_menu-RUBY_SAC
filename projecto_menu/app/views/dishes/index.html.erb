<h1>Lista de Platos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Tipo de Plato</th>
      <th>Local</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.description %></td>
        <td><%= dish.dishes_type.description %></td>
        <td><%= dish.local.description %></td>
        <td><%= dish.status %></td>
        <td><%= link_to 'Ver', dish %></td>
        <td><%= link_to 'Editar', edit_dish_path(dish) %></td>
        <td><%= link_to 'Eliminar', dish, method: :delete, data: { confirm: 'EstÃ¡ Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

