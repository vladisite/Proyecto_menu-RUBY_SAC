<h1>Listing menus</h1>

<table>
  <thead>
    <tr>
      <th>Date menu</th>
      <th>Stock</th>
      <th>Price</th>
      <th>Date register</th>
      <th>Order status</th>
      <th>Local</th>
      <th>Week</th>
      <th>Dishes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.date_menu %></td>
        <td><%= menu.stock %></td>
        <td><%= menu.price %></td>
        <td><%= menu.date_register %></td>
        <td><%= menu.order_status %></td>
        <td><%= menu.local %></td>
        <td><%= menu.week %></td>
        <td><%= menu.dishes %></td>
        <td><%= link_to 'Show', menu %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

